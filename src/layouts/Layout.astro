---
interface Props {
	title: string;
  description:string,
  keywords:string
}

const { title,description,keywords } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
    <title>{title}</title>
    <meta name="description" content={description} >
    <meta name="keywords" content={keywords}>
    <meta charset="utf-8">
    <meta property="og:url" content="https://www.proyexapp.com">
    <meta property="og:title" content="proyexapp">
    <meta property="og:description" content={description}>
    <meta property="og:image" content="URL de la Imagen">
    <meta name="googlebot" content="index,follow"/>
    <meta name="generator" content={Astro.generator} />
    <meta name="robots" content="index, follow"> 
    <meta name="author" content="proyexapp"> 
    <meta property="locale" content="es_CO">
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#0e2d5f" />
    <link rel="canonical" href="https://www.proyexapp.com/"> 
    <link rel="shortcut icon" href="favicon.svg" type="image/x-icon">
    <link rel="sitemap" href="/sitemap-index.xml" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Protest+Riot&family=REM:ital,wght@0,200;1,200&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
 *{
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}
html {
  background-color: #f5f5f5;
  scroll-behavior: smooth;
	font-family:
	Menlo,
      Monaco,
      Lucida Console,
      "Courier New",
      Courier,
      monospace,
	  sans-serif
    letter-spacing: 0.025rem;
  }

  h1,
  h2,
  h3,
  h4 {
    font-family:
	 "Protest Riot",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }
body {
    --color1: #FFF ;
    --color2: #0e2d5f ;
}
body,
  figure {
    margin: 0;
    padding: 0;
  }

p {
	font-family: "REM", sans-serif;
    font-size:0,9rem;
    line-height: 1.7;
    text-wrap: pretty;
  }
  a {
    text-decoration: none;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }
</style>
