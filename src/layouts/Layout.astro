---
import '@fontsource/anta';
import '@fontsource/source-sans-pro/300.css';
import '@fontsource/source-sans-pro/400.css';
import Footer from '@/components/Footer.astro';
import Navbar from '@/components/Navbar.astro';

interface Props {
	title: string; //titulo de la pagina
  description:string, // descripción de la pagina
}
const { title,description } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
    <!-- Global Metadata -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href="https://www.proyexapp.com">
     <!-- General Meta Tags -->
     <title>{title}</title>
     <meta name="title" content="proyexapp" />
     <meta name="description" content="En PROYEXAPP, creamos sitios web personalizados y estrategias de marketing digital para resaltar tu presencia en línea. Desde diseños elegantes hasta desarrollo web, ¡destaca con nosotros!" />
     <meta name="keywords" content="Diseño web personalizado, Desarrollo web avanzado, Optimización para dispositivos móviles, Creación de sitios web, Diseño web personalizado, Desarrollo web avanzado, Presencia en línea, Estrategias digitales, Medellín, Posicionamiento en Medellín, Destacarte en el mercado, Implementación web, Impulsar tu presencia en línea" />
     <meta name="author" content="proyexapp" />
     <link rel="sitemap" href="/sitemap-index.xml" />
     <meta name="robots" content="index, follow" />
     <meta name="googlebot" content="index, follow" />
     <!-- Open Graph -->
     <meta property="og:type" content="website" />
      <meta property="og:site_name" content="proyexapp" />
      <meta property="og:title" content={title} />
      <meta property="og:description" content={description} />
      <meta property="og:url" content="https://www.proyexapp.com" />
      <meta property="og:image" content="/logoCompleto.png" />
      <meta property="og:image:type" content="image/png" />
      <meta property="og:image:width" content="100" />
      <meta property="og:image:height" content="200" />
      <meta property="og:image:alt" content={"logo proyexapp"} />
      <meta property="og:locale" content="es_CO" />
     <!-- theme meta -->
     <meta name="theme-color" content="#0e2d5f" />
     <meta http-equiv="X-UA-Compatible" content="ie=edge" />
      
	</head>
	<body>
    <Navbar/>
    <main>
      <slot />
    </main>
    <Footer/>
	</body>
</html>
<style is:global>
*, 
*:after,
*:before {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    text-decoration: none;
    list-style: none;
    text-decoration: none;
}
main {
  background-color: var(--color_terciario);
}
  :root {
    /*--- Colors ----- */
    --color_primario:#0E2D5F; 
    --color_secundario:#CED7E4;
    --color_terciario:#F5F5F5;
    --color_cuarto:#FFFF; 
    /*---  Shadows ---*/
    --sombra_caja:#00000029 0 1px 4px;
    --sombra_caja_2:0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    --text-shadow: 2px 7px 5px rgba(0,0,0,0.3), 0px -4px 10px rgba(0, 0, 0, 0.3);
    /*---- border --- */
    --border-radius: 0.7rem;
    --border-style: 2px solid var(--color_primario);

    /* --- text --- */
    --line_height:1.5;
    --height_paragraph:3

    /* --- margin --- */

    /* --- padding --- */

  }
  h1,h2,h3,h4,h5,h6 {
    font-family: 'Anta', system-ui, sans-serif;
    font-weight: 400;
    line-height: var(--line_height);
    text-wrap:balance;
    text-transform: uppercase;
  }
  p,a,strong,span {
    font-family:"Source Sans Pro", system-ui, sans-serif ;
    line-height:var(--line_height);
    text-wrap:balance;
  }
  p,a {
    font-weight: 300;
  }
  strong,span {
    font-weight: 400;
  }
  /* clases generales */
  .truncated_simple_text {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  .truncated_paragraph {
    overflow: hidden;
    -webkit-line-clamp: var(--height_paragraph) ;
    display: -webkit-box;
    -webkit-box-orient: vertical;
  }
  .btn {
        box-shadow:var(--sombra_caja_2) ;
        width: 100%;
        border: 0;
        border-radius:var(--border-radius) ;
        font-family:"Source Sans Pro", system-ui, sans-serif ; 
        text-transform: uppercase;
        padding: 14px 50px;
        cursor: pointer;
        text-align: center;
  }
  .btn_primary {
        background-color:var(--color_cuarto);
        color: var(--color_primario);
    }
    .btn_primary:hover {
      transition: 0.7s;
      outline:2px dashed var(--color_primario) ;
    }
 .btn_second {
        background-color:var(--color_primario);
        color: var(--color_terciario);
    }

</style>
