---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="Es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Protest+Riot&family=REM:ital,wght@0,200;1,200&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
 *{
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}
html {
  background-color: #f5f5f5;
  scroll-behavior: smooth;
	font-family:
	Menlo,
      Monaco,
      Lucida Console,
      "Courier New",
      Courier,
      monospace,
	  sans-serif
    letter-spacing: 0.025rem;
  }

  h1,
  h2,
  h3,
  h4 {
    font-family:
	 "Protest Riot",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }
body {
    --color1: #FFF ;
    --color2: #0e2d5f ;
}
body,
  figure {
    margin: 0;
    padding: 0;
  }

p {
	font-family: "REM", sans-serif;
    font-size:0,9rem;
    line-height: 1.7;
    text-wrap: pretty;
  }
  a {
    text-decoration: none;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }
</style>
