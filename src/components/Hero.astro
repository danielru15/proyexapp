---
interface Props {
	title: string;
}
const { title } = Astro.props;
---

<section class="hero">
<div class="content">
    <h1>{title}</h1>
</div>
<div class="sidebar">
    <div class="social">

    </div>

</div>
<div class="bubles">
        <img src="/bubble.webp" alt="bubble">
        <img src="/bubble.webp" alt="bubble-1">
        <img src="/bubble.webp" alt="bubble-2">
        <img src="/bubble.webp" alt="bubble-3">
        <img src="/bubble.webp" alt="bubble-4">
        <img src="/bubble.webp" alt="bubble-5">
        <img src="/bubble.webp" alt="bubble-6">  
</div>
</section>

<style>
    .hero {
        width: 100%;
        height: 100vh;
        background-image: url("/background2.webp");
        background-size: cover;
        background-position: center;
        position: relative;
        overflow: hidden;
        /*
        border-bottom-right-radius:200px ;
        */
    }
    .content {
        padding: 0 80px;
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        z-index: 2;
        color: white;
    }
    h1 {
        font-size: 70px;
        line-height: 80px;
    }
    .sidebar {
        display: none;
        width: 50px;
        height: 100vh;
        background: linear-gradient(#1575bc, #08113c);
        position:absolute;
        right:0;
        top: 0;
    }
    .bubles {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: space-around;
        position: absolute;
        bottom: -70px;
    }

    .bubles img {
        width: 50px;
        animation: bubble 7s linear infinite;
    }

    .bubles img:nth-child(1) {
        width: 20px;
        animation-delay: 2s;
    }
    .bubles img:nth-child(2) {
        width: 25px;
        animation-delay: 1s;
    }
    .bubles img:nth-child(3) {
        animation-delay: 3s;
    }
    .bubles img:nth-child(4) {
        width: 50px;
        animation-delay: 4.5s;
    }
    .bubles img:nth-child(5) {
        width: 35px;
        animation-delay: 3s;
    }
    .bubles img:nth-child(6) {
        animation-delay: 6s;
    }
    .bubles img:nth-child(7) {
        width: 20px;
        animation-delay: 7s;
    }

    @keyframes bubble {
        0% {
            transform: translateY(0);
            opacity: 0;
        }
        50% {
            opacity: 1;
        }
        70% {
            opacity: 1;
        }
        100% {
            transform: translateY(-80vh);
            opacity: 0;
        }
    }

    @media screen and (max-width:600px) {
        h1 {
            font-size: 36px;
            line-height: 50px;
        }
        .content { 
            padding: 0 30px
        };
        .sidebar {
            width: 100%;
            height: 50px;
            top: auto;
            bottom: 0;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
    }

</style>