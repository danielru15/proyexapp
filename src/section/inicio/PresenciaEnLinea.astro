    .flex-titulo {
        display: flex;
        flex-direction: row;
    }
    .flex-titulo h2 {
        font-size: 2.7rem;
    }
    .flex-titulo p {
        width: 60vw;
        font-size: 1.4rem;
        text-align: left;
    }
