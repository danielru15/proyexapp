        display: flex;
        gap: .7rem;
        justify-content: center;
        margin-top: 2rem;
    }
    .flex div {
        text-align: center;
        width: 33%;
    }
    .flex div h3 {
        font-size: 2.2rem;
    }
    .flex div p {
        font-size:  1.3rem;
    }
    @media (max-width: 280px) {
        .flex-titulo h2 {
        font-size: 2rem;
    }
    .flex-titulo p {
        font-size: 1.3rem;
    }
    
    .flex div h3 {
        font-size: 1.4rem;
    }
    .flex div p {
        font-size:  1.3rem;
    }

    }
    @media (min-width: 576px) {

    }
